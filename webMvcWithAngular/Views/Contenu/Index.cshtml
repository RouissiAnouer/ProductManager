
<h1>Liste des Contenus</h1>

<div id="content" ng-controller="ContenusController">

    <div ng-class="result" ng-model="message"></div>
    <hr />

    <button ng-click="add()">
        Ajouter
    </button>

    <div>
        <input type="text" ng-model="searchText" />
        <select ng-model="selectedProject">
            <option></option>
            <option ng-repeat="p in Projects" value="{{p.ProjectId}}">{{p.Title}}</option>
        </select>
        <button ng-click="search()"> Chercher</button>
    </div>

    <div ng-show="!contenus || contenus.length==0">
        <span style="color: red">Il n'existe pas des contenus à afficher!</span>
    </div>
    <table class="table table-striped">
        <tr ng-repeat="item in contenus">
            <td>{{item.ProjectTitle}}</td>
            <td>{{item.Title}}</td>
            <td>{{item.Description}}</td>
            
            <td>
                <a href="#" ng-click="edit(item)" title="Edit Record">
                    Modifier
                </a><a href="#" ng-click="delete(item)" title="Delete Record">
                    Supprimer
                </a>
            </td>

        </tr>
    </table>
</div>

@section JavaScript{
    
    <script src="~/App/controller/ContenusController.js"></script>
}
